<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <!-- Database connection settings -->
         <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/apple</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <!-- Other Hibernate properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Enable logging -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        

        <!-- Automatically create/create database schema -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Mapping files -->
        <mapping class="com.cisco.Person"/> <!-- Replace with your actual mapping file path -->
		<mapping class="com.cisco.Passport"/>
		<mapping class="com.cisco.Mobile"/>
    </session-factory>

</hibernate-configuration>
